#
# If you wish to use /etc/sysconfig/network/scripts/dhcpcd-hook, be sure
# to configure a subdomain profile for it.
#
# Note that dhcpcd (at least as distributed by SuSE) offers to rewrite
# ntp.conf and yp.conf in addition to resolv.conf.
#
# vim:syntax=apparmor


profile dhcpcd /{usr/,}sbin/dhcpcd {
  #include <abstractions/base>
  #include <abstractions/nameservice>

  capability net_admin,
  capability net_raw,
  capability sys_admin,

  /dev/tty rw,
  /etc/dhcpc/* rwl,
  /etc/dhcpcd.conf r,
  /etc/dhcpcd.duid rw,
  /etc/init.d/syslog Ux, # fixme
  /etc/ntp.conf{,.sv} rwl,
  /etc/resolv.conf{,.sv} rwl,
  /etc/sysconfig/network/scripts/dhcpcd-hook mrix,
  /etc/yp.conf{,.sv} rwl,
  /lib64/dhcpcd/dhcpcd-run-hooks Cx,
  /proc/*/net/if_inet* r,
  /proc/sys/net/ipv*/conf/*/promote_secondaries rw,
  /proc/sys/net/ipv6/conf/*/accept_ra r,
  /proc/sys/net/ipv6/conf/*/autoconf r,
  /var/lib/dhcpcd/dhcpcd-*.cache rw,
  /var/lib/dhcpcd/dhcpcd-*.info rw,
  /var/lib/dhcpcd/dhcpcd-*.info.old rw,
  /var/lib/dhcpcd/dhcpcd-*.lease rw,
  /var/lib/dhcpcd/dhcpcd-*.lease6 rw,
  /{,var/}run/dhcpcd-*.pid rwlk,
  /{usr/,}bin/bash mrix,
  /{usr/,}bin/touch mrix,
  /{usr/,}sbin/dhcpcd mrix,
  /{usr/,}sbin/ifup Ux, # fixme
  /{usr/,}sbin/modify_resolvconf mrix,


  profile /lib64/dhcpcd/dhcpcd-run-hooks {
    #include <abstractions/base>
    #include <abstractions/bash>
    #include <abstractions/consoles>
    #include <abstractions/nameservice>

    /bin/bash mr,
    /bin/cat mr,
    /bin/cat rix,
    /bin/chmod rix,
    /bin/hostname rix,
    /bin/rm mr,
    /bin/rm rix,
    /bin/sed mr,
    /bin/sed rix,
    /etc/init.d/ntpd rix,
    /etc/ntp.conf rw,
    /etc/resolv.conf rw,
    /etc/resolv.conf.head r,
    /etc/resolv.conf.tail r,
    /run/dhcpcd/ntp.conf.*.dhcp rw,
    /run/dhcpcd/ntp.conf.*.dhcp6 rw,
    /run/dhcpcd/ntp.conf.*.ra rw,
    /run/dhcpcd/ntp.conf/ r,
    /run/dhcpcd/ntp.conf/*.dhcp rw,
    /run/dhcpcd/resolv.conf.*.dhcp rw,
    /run/dhcpcd/resolv.conf.*.dhcp6 rw,
    /run/dhcpcd/resolv.conf.*.ra rw,
    /run/dhcpcd/resolv.conf/ r,
    /run/dhcpcd/resolv.conf/*.dhcp rw,
    /run/dhcpcd/resolv.conf/*.dhcp6 rw,
    /sbin/rc-service rix,
    /usr/bin/cmp rix,

  }
}
