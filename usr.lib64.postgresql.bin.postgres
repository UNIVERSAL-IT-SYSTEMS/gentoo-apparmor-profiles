#include <tunables/global>

profile postgresql /usr/lib64/postgresql-*/bin/postgres {
  #include <abstractions/base>
  #include <abstractions/nameservice>

  /data.www/postgresql/** rwl,
  /dev/shm/PostgreSQL.* rw,
  /etc/postgresql-*/pg_hba.conf r,
  /etc/postgresql-*/pg_ident.conf r,
  /etc/postgresql-*/postgresql.conf r,
  /run/postgresql/* w,
  /run/postgresql/*.lock rw,
  /usr/lib64/postgresql-*/bin/postgres mr,
  /usr/share/postgresql-*/** r,

}
