#include <tunables/global>

/sbin/rpcbind {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/nis>

  capability setgid,
  capability setuid,

  /etc/hosts.allow r,
  /etc/hosts.deny r,
  /etc/netconfig r,
  /etc/rpc r,
  /run/rpcbind.lock rwk,
  /run/rpcbind.sock w,
  /sbin/rpcbind mr,

}
