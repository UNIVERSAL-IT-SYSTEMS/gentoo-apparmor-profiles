#include <tunables/global>

/sbin/rpcbind {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/nis>

  capability setgid,
  capability setuid,

  /etc/hosts.allow r,
  /etc/netconfig r,
  /run/rpcbind.lock rwk,
  /run/rpcbind.sock w,
  /sbin/rpcbind mr,

}
